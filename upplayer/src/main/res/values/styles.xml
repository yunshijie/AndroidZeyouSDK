<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="broadcastOnclick">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_btn_radis_alpha</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="BaseAppButtonForRed">
        <item name="android:background">@drawable/bg_common_rounded_red</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/common_content_size_16</item>
    </style>

</resources>
