<resources>

    <!--<style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar"></style>-->

    <!--<style name="AppTheme" parent="AppBaseTheme"></style>-->

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/red_main</item>
        <item name="colorAccent">#F44336</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/BaseAppTheme"></style>

    <style name="BaseAppButtonForRed">
        <item name="android:background">@drawable/bg_common_rounded_red</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/string_size_16</item>
    </style>

    <style name="AppBackTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/space_size_10</item>
    </style>

    <style name="AppLineTitleTheme">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/string_size_16</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/space_size_10</item>
    </style>

    <style name="AppLineEditInputTheme">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/string_size_12</item>
        <item name="android:layout_marginRight">@dimen/space_size_10</item>
        <item name="android:gravity">right|center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
    </style>


</resources>
